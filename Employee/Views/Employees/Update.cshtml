@model Employees.Models.EmployesViewModel
@{
    ViewBag.Title = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h2>Create</h2>

    @using (Html.BeginForm("Update", "Employees"))
    {
        @Html.ValidationSummary()
        <div class="container">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.FName)
                    @Html.TextBoxFor(model => model.FName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.LName)
                    @Html.TextBoxFor(model => model.LName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Number)
                    @Html.TextBoxFor(model => model.Number, new { @class = "form-control" })
                </div>
            </div>
            <div>

                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

    }
</body>
</html>
